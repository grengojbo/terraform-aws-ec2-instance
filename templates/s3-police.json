{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [ "s3:ListBucket" ],
			"Resource": [
				"arn:aws:s3:::${s3_bucket}",
				"arn:aws:s3:::${bucket}",
				"arn:aws:s3:::${s3_bucket_backup}"
			]
		},
		{
			"Effect": "Allow",
			"Action": [ "s3:DeleteObject" ],
			"Resource": [
				"arn:aws:s3:::${s3_bucket_backup}",
				"arn:aws:s3:::${s3_bucket_backup}/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [ "s3:PutObject", "s3:GetObject" ],
			"Resource": [
				"arn:aws:s3:::${bucket}",
				"arn:aws:s3:::${bucket}/*",
				"arn:aws:s3:::${s3_bucket_backup}",
				"arn:aws:s3:::${s3_bucket_backup}/*"
			]
		}
	]
}
